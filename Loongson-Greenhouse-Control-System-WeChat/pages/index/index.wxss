.swiper-item{
  display: block;
}
.slide-image {
  width: 100%;
}
swiper {
  width: 100%;
}

.commen_title {
  padding: 23.4px;
  background-color: #fff;
  font-size: 51.48rpx;
  font-weight: 1000;
  justify-content: center;
  text-align: center;
  border-bottom: 2.34px solid #E9E9E9;
}
.device {
  position: relative;
  display: flex;
  height: 120rpx;
  /* background-color: hotpink; */
  padding-left: 80rpx;
  border-bottom: 1rpx solid #E7E7EB;
}
.single_image_wrap {
  position: absolute;
  left: 10rpx;
}
.device_image {
  width: 100rpx;
  height: 100rpx;
}
.device_info {
  position: relative;
  display: flex;
  flex-direction: row;
  height: 120rpx;
  margin-left: 40rpx;
}
.device_name {
  display: flex;
  font-size: 46.8rpx;
  font-weight: 1000;
  color: blue;
  width: 514.8rpx;
  height: 117rpx;
  align-items: center;
  text-align: center;
  font-family: monospace;
}

.device_status {
  font-size: 46.8rpx;
  font-weight: 1000;
  color: #FF1493;
  display: flex;
  width: 514.8rpx;
  align-items: center;
  text-align: right;
  font-family: monospace;
}